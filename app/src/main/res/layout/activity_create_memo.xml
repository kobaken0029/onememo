<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wanmemo_background_02"
        tools:context="com.pliseproject.activities.CreateMemoActivity">

        <include
            android:id="@+id/toolbar_menu"
            layout="@layout/toolbar" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar_menu">

            <fragment
                android:id="@+id/create_fragment"
                android:name="com.pliseproject.fragments.CreateMemoFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include layout="@layout/toolbar_shadow" />
        </FrameLayout>
    </RelativeLayout>

    <!-- nav drawer -->
    <include layout="@layout/drawer_layout" />
</android.support.v4.widget.DrawerLayout>