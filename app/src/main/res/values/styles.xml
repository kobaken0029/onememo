<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorControlActivated">@color/sub_color</item>
    </style>

    <!-- ImageryHeader Theme -->
    <style name="Theme.ImageryHeader" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.ImageryHeader.ActionBar</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ImageryHeader Theme Action Bar -->
    <style name="Theme.ImageryHeader.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:displayOptions">showHome</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black_semi_transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextSub">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey600</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextMainButton">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSubButton">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextReadMemo">
        <item name="android:textSize">@dimen/text_subject_and_memo</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
    </style>

    <style name="TextDetail">
        <item name="android:textSize">@dimen/text_detail</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
    </style>

    <style name="TextCustomDialog">
        <item name="android:textSize">@dimen/text_dialog</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/text_size_hint</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="TextListMainItem">
        <item name="android:textSize">@dimen/text_list_item</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="TextListSubItem">
        <item name="android:textSize">@dimen/text_sub_size</item>
        <item name="android:textColor">@color/sub_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NavigationDrawerHeaderMainText">
        <item name="android:textSize">@dimen/text_drawer</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationDrawerHeaderSubText">
        <item name="android:textSize">@dimen/text_drawer</item>
        <item name="android:textColor">@color/navigation_drawer_header_sub_text</item>
    </style>

    <style name="NavigationDrawerMenuMainText">
        <item name="android:textSize">@dimen/text_drawer</item>
        <item name="android:textColor">@color/navigation_drawer_menu_main_text</item>
    </style>

    <style name="NavigationDrawerSubHeaderText">
        <item name="android:textSize">@dimen/text_drawer</item>
        <item name="android:textColor">@color/navigation_drawer_sub_header_text</item>
    </style>

    <style name="NavigationDrawerSubMenuText">
        <item name="android:textSize">@dimen/text_drawer</item>
        <item name="android:textColor">@color/navigation_drawer_sub_menu_text</item>
    </style>

</resources>
